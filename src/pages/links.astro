---
import BaseLayout from "../layouts/BaseLayout.astro";

const links = [
    { label: "Latest Release", url: "/music" },
    { label: "Join the Community", url: "#" },
    { label: "Official Website", url: "/" },
    { label: "Instagram", url: "https://instagram.com" },
    { label: "Twitter", url: "https://twitter.com" },
    { label: "TikTok", url: "https://tiktok.com" },
];
---

<BaseLayout title="Links | amii">
    <div
        class="container"
        style="max-width: 500px; padding-top: 3rem; padding-bottom: 3rem; display: flex; flex-direction: column; gap: 1rem;"
    >
        <div class="text-center" style="margin-bottom: 2rem;">
            <div
                style="width: 6rem; height: 6rem; background-color: #eee; border-radius: 50%; margin: 0 auto 1rem; overflow: hidden;"
            >
                <img
                    src="/placeholder-hero.jpg"
                    style="width: 100%; height: 100%; object-fit: cover;"
                />
            </div>
            <h1
                class="font-heading"
                style="font-size: 1.5rem; font-weight: bold;"
            >
                amii
            </h1>
        </div>

        {
            links.map((link) => (
                <a href={link.url} class="link-btn">
                    {link.label}
                </a>
            ))
        }
    </div>

    <style>
        .link-btn {
            display: block;
            width: 100%;
            padding: 1rem 1.5rem;
            text-align: center;
            border: 1px solid currentColor;
            border-radius: 4px;
            transition:
                background-color 0.2s,
                color 0.2s;
        }
        .link-btn:hover {
            background-color: var(--color-text);
            color: var(--color-bg);
        }
    </style>
</BaseLayout>
