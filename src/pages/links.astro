---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getEntry } from "astro:content";

const linksPage = await getEntry("pages", "links");
if (!linksPage) {
    throw new Error("Could not find 'links' page content");
}
const { data } = linksPage;
const links = data.links || [];
---

<BaseLayout title={data.title || "Links | amii"}>
    <div
        class="container"
        style="max-width: 500px; padding-top: 3rem; padding-bottom: 3rem; display: flex; flex-direction: column; gap: 1rem;"
    >
        <div class="text-center" style="margin-bottom: 2rem;">
            <div
                style="width: 6rem; height: 6rem; background-color: #eee; border-radius: 50%; margin: 0 auto 1rem; overflow: hidden;"
            >
                <img
                    src={data.profileImage || "/placeholder-hero.jpg"}
                    style="width: 100%; height: 100%; object-fit: cover;"
                />
            </div>
            <h1
                class="font-heading"
                style="font-size: 1.5rem; font-weight: bold;"
            >
                {data.profileName || "amii"}
            </h1>
        </div>

        {
            links.map(
                (link: {
                    url: string | URL | null | undefined;
                    label: unknown;
                }) => (
                    <a href={link.url} class="link-btn">
                        {link.label}
                    </a>
                ),
            )
        }
    </div>

    <style>
        .link-btn {
            display: block;
            width: 100%;
            padding: 1rem 1.5rem;
            text-align: center;
            border: 1px solid currentColor;
            border-radius: 4px;
            transition:
                background-color 0.2s,
                color 0.2s;
        }
        .link-btn:hover {
            background-color: var(--color-text);
            color: var(--color-bg);
        }
    </style>
</BaseLayout>
