---
import BaseLayout from "../layouts/BaseLayout.astro";

const links = [
    { label: "Latest Release", url: "/music" },
    { label: "Join the Community", url: "#" },
    { label: "Official Website", url: "/" },
    { label: "Instagram", url: "https://instagram.com" },
    { label: "Twitter", url: "https://twitter.com" },
    { label: "TikTok", url: "https://tiktok.com" },
];
---

<BaseLayout title="Links | amii">
    <div class="max-w-md mx-auto py-12 flex flex-col gap-4">
        <div class="text-center mb-8">
            <div
                class="w-24 h-24 bg-gray-200 rounded-full mx-auto mb-4 overflow-hidden"
            >
                <img
                    src="/placeholder-hero.jpg"
                    class="w-full h-full object-cover"
                />
            </div>
            <h1 class="text-2xl font-bold font-heading">amii</h1>
        </div>

        {
            links.map((link) => (
                <a
                    href={link.url}
                    class="block w-full py-4 px-6 text-center border border-current rounded hover:bg-black hover:text-white dark:hover:bg-white dark:hover:text-black transition-colors"
                >
                    {link.label}
                </a>
            ))
        }
    </div>
</BaseLayout>
