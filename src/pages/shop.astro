---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Shop | amii">
    <div
        class="container"
        style="min-height: 60vh; display: flex; flex-direction: column; align-items: center; justify-content: center; text-align: center;"
    >
        <h1 class="font-heading" style="font-size: 4rem; margin-bottom: 1rem;">
            Shop
        </h1>
        <p style="font-size: 1.25rem; margin-bottom: 2rem;">
            Official merchandise coming soon.
        </p>

        <form
            style="display: flex; gap: 0.5rem; max-width: 400px; width: 100%;"
        >
            <input
                type="email"
                placeholder="Get notified..."
                style="flex-grow: 1;"
            />
            <button class="btn">Join</button>
        </form>
    </div>
</BaseLayout>
