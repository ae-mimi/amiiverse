---
import BaseLayout from "../layouts/BaseLayout.astro";
import pressData from "../data/press.json";
---

<BaseLayout title="Press | amii">
    <section class="max-w-4xl mx-auto py-12">
        <h1 class="text-4xl font-heading mb-12 border-b border-current pb-4">
            Press Assets
        </h1>

        <div class="grid md:grid-cols-2 gap-12">
            <div>
                <h2 class="text-2xl font-heading mb-4">Biographies</h2>

                <div class="mb-8">
                    <h3
                        class="text-sm uppercase tracking-widest mb-2 opacity-60"
                    >
                        Short Bio
                    </h3>
                    <p
                        class="bg-gray-100 dark:bg-gray-800 p-4 rounded text-sm select-all"
                    >
                        {pressData.shortBio}
                    </p>
                </div>

                <div class="mb-8">
                    <h3
                        class="text-sm uppercase tracking-widest mb-2 opacity-60"
                    >
                        Medium Bio
                    </h3>
                    <div class="prose prose-sm">
                        {pressData.mediumBio}
                    </div>
                </div>
            </div>

            <div>
                <h2 class="text-2xl font-heading mb-4">Downloads</h2>
                <ul class="space-y-4">
                    <li>
                        <a href="#" class="btn w-full text-center"
                            >Download EPK (PDF)</a
                        >
                    </li>
                    <li>
                        <a href="#" class="btn w-full text-center"
                            >Download High-Res Photos</a
                        >
                    </li>
                    <li>
                        <a href="#" class="btn w-full text-center"
                            >Download Logos</a
                        >
                    </li>
                </ul>
            </div>
        </div>
    </section>
</BaseLayout>
