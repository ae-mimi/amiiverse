---
import BaseLayout from "../layouts/BaseLayout.astro";
import pressDataRaw from "../data/press.json";
const pressData = pressDataRaw as any;
---

<BaseLayout title="Press | amii">
    <section class="section container" style="max-width: 1000px;">
        <h1
            class="font-heading"
            style="font-size: 2.5rem; margin-bottom: 3rem; border-bottom: 1px solid currentColor; padding-bottom: 1rem;"
        >
            Press Assets
        </h1>

        <div class="grid cols-2">
            <div>
                <h2
                    class="font-heading"
                    style="font-size: 1.5rem; margin-bottom: 1rem;"
                >
                    Biographies
                </h2>

                <div style="margin-bottom: 2rem;">
                    <h3
                        class="uppercase opacity-60"
                        style="font-size: 0.8rem; letter-spacing: 0.05em; margin-bottom: 0.5rem;"
                    >
                        Short Bio
                    </h3>
                    <p
                        style="background: rgba(0,0,0,0.05); padding: 1rem; border-radius: 4px; font-size: 0.9rem; user-select: all;"
                    >
                        {pressData.shortBio}
                    </p>
                </div>

                <div style="margin-bottom: 2rem;">
                    <h3
                        class="uppercase opacity-60"
                        style="font-size: 0.8rem; letter-spacing: 0.05em; margin-bottom: 0.5rem;"
                    >
                        Medium Bio
                    </h3>
                    <div
                        class="font-body"
                        style="font-size: 0.9rem; line-height: 1.6;"
                    >
                        {pressData.mediumBio}
                    </div>
                </div>
            </div>

            <div>
                {
                    pressData.epkPdf && (
                        <li style="margin-bottom: 1rem; list-style: none;">
                            <a
                                href={pressData.epkPdf}
                                class="btn w-full text-center"
                                target="_blank"
                            >
                                Download EPK (PDF)
                            </a>
                        </li>
                    )
                }

                {
                    pressData.photos && pressData.photos.length > 0 && (
                        <li style="margin-bottom: 1rem; list-style: none;">
                            <span style="display: block; font-size: 0.8rem; opacity: 0.6; margin-bottom: 0.5rem;">
                                Photos
                            </span>
                            <div style="display: flex; flex-direction: column; gap: 0.5rem;">
                                {pressData.photos.map(
                                    (
                                        photo: {
                                            image: string;
                                            credit?: string;
                                        },
                                        index: number,
                                    ) => (
                                        <a
                                            href={photo.image}
                                            class="btn w-full text-center"
                                            download
                                            target="_blank"
                                        >
                                            Download Photo {index + 1}{" "}
                                            {photo.credit
                                                ? `(${photo.credit})`
                                                : ""}
                                        </a>
                                    ),
                                )}
                            </div>
                        </li>
                    )
                }
            </div>
        </div>
    </section>
</BaseLayout>
