---
import BaseLayout from "../layouts/BaseLayout.astro";
import settings from "../data/settings.json";

// In reality, this data would come from a "Members" collection
const members = [
    {
        name: "Member 1",
        bio: "Bio coming soon.",
        photo: "/uploads/member1.jpg",
    },
    {
        name: "Member 2",
        bio: "Bio coming soon.",
        photo: "/uploads/member2.jpg",
    },
    {
        name: "Member 3",
        bio: "Bio coming soon.",
        photo: "/uploads/member3.jpg",
    },
];
---

<BaseLayout title="About | amii">
    <section class="section container" style="max-width: 800px;">
        <h1
            class="font-heading text-center"
            style="font-size: 3rem; margin-bottom: 2rem;"
        >
            We Are amii
        </h1>

        <div
            class="font-body text-center"
            style="font-size: 1.2rem; line-height: 1.6; margin-bottom: 4rem;"
        >
            <p>
                amii is a Nigerian girl group creating pop music rooted in
                honesty, growth, and shared experience.
            </p>
        </div>

        <div class="grid cols-3">
            {
                members.map((member) => (
                    <div class="text-center">
                        <div style="aspect-ratio: 3/4; background-color: #eee; margin-bottom: 1rem; overflow: hidden; border-radius: 8px;">
                            <img
                                src={member.photo}
                                alt={member.name}
                                style="width: 100%; height: 100%; object-fit: cover; filter: grayscale(100%); transition: filter 0.5s;"
                                onmouseover="this.style.filter='grayscale(0)'"
                                onmouseout="this.style.filter='grayscale(100%)'"
                            />
                        </div>
                        <h3
                            class="font-heading"
                            style="font-size: 1.25rem; margin-bottom: 0.5rem;"
                        >
                            {member.name}
                        </h3>
                        <p class="opacity-80" style="font-size: 0.9rem;">
                            {member.bio}
                        </p>
                    </div>
                ))
            }
        </div>
    </section>
</BaseLayout>
