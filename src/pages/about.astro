---
import BaseLayout from "../layouts/BaseLayout.astro";
import settings from "../data/settings.json";

// In reality, this data would come from a "Members" collection
const members = [
    {
        name: "Member 1",
        bio: "Bio coming soon.",
        photo: "/uploads/member1.jpg",
    },
    {
        name: "Member 2",
        bio: "Bio coming soon.",
        photo: "/uploads/member2.jpg",
    },
    {
        name: "Member 3",
        bio: "Bio coming soon.",
        photo: "/uploads/member3.jpg",
    },
];
---

<BaseLayout title="About | amii">
    <section class="max-w-3xl mx-auto py-12">
        <h1 class="text-5xl font-heading mb-8 text-center">We Are amii</h1>

        <div
            class="prose mx-auto mb-16 text-lg font-body leading-relaxed text-center"
        >
            <p>
                amii is a Nigerian girl group creating pop music rooted in
                honesty, growth, and shared experience.
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {
                members.map((member) => (
                    <div class="text-center">
                        <div class="aspect-[3/4] bg-gray-200 mb-4 overflow-hidden rounded-lg">
                            <img
                                src={member.photo}
                                alt={member.name}
                                class="w-full h-full object-cover grayscale hover:grayscale-0 transition-all duration-500"
                            />
                        </div>
                        <h3 class="text-xl font-heading mb-2">{member.name}</h3>
                        <p class="text-sm opacity-80">{member.bio}</p>
                    </div>
                ))
            }
        </div>
    </section>
</BaseLayout>
