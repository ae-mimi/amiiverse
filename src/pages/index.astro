---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import settings from '../data/settings.json';

// In a real app, I would fetch 'settings' from a collection or file properly if it was managed by CMS as a collection item.
// Since 'settings' is a direct JSON file edited by CMS, importing it works for build time.
---

<BaseLayout title="amii | Official Website">
  <Hero 
    type={settings.heroType as any}
    title={settings.heroTitle}
    subtitle={settings.heroSubtitle}
    link={settings.heroLink}
    linkText={settings.heroLinkText}
  />
  
  <section class="py-16 text-center">
    <h2 class="text-3xl font-heading mb-6">Latest Releases</h2>
    <p>Coming Soon</p>
  </section>
</BaseLayout>
