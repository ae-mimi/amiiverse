---
interface Props {
    member: {
        data: {
            name: string;
            photo: string;
            bio: string;
        };
    };
}

const { member } = Astro.props;
---

<div class="member-card">
    <div class="image-wrapper">
        <img src={member.data.photo} alt={member.data.name} loading="lazy" />
    </div>
    <div class="info">
        <h3 class="font-heading">{member.data.name}</h3>
        <p class="font-body bio">{member.data.bio}</p>
    </div>
</div>

<style>
    .member-card {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
        padding: 1.5rem;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 12px;
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        transition:
            transform 0.3s ease,
            box-shadow 0.3s ease;
    }

    .member-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        border-color: var(--color-accent, #ff00ff);
    }

    .image-wrapper {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        overflow: hidden;
        border: 3px solid var(--color-text, #fff);
    }

    .image-wrapper img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .info {
        text-align: center;
    }

    .info h3 {
        font-size: 1.5rem;
        margin-bottom: 0.5rem;
        color: var(--color-accent, #ff00ff); /* Fallback */
    }

    .info p {
        font-size: 0.95rem;
        opacity: 0.9;
        color: var(--color-text, #fff);
    }
</style>
